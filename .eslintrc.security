{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true,
  },
  "plugins": [
    "@typescript-eslint/tslint"
  ],
  "ignorePatterns": ["**/__mocks__/**"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "plugin:security/recommended"
  ]
}
